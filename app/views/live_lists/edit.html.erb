<%= form_for @stream, {url: live_list_path(id: @stream.id), method: :PUT} do |f| %>
  <div class="form-group row">
    <label for="inputPassword" class="col-sm-2 col-form-label">直播名称</label>
    <div class="col-sm-10">
      <%= f.text_field :live_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row" style="margin-top: 10px;">
    <label for="inputPassword" class="col-sm-2 col-form-label">直播预计开始时间</label>
    <div class="col-sm-10">
      <%= f.text_field :start_time, class: "form-control my97_date", :onclick => "WdatePicker({dateFmt:'yyyy-MM-dd HH-MM-SS'})" %>
    </div>
  </div>
  <div class="form-group row" style="margin-top: 10px;">
    <label for="inputPassword" class="col-sm-2 col-form-label">直播预计开始结束</label>
    <div class="col-sm-10">
      <%= f.text_field :end_time, class: "form-control my97_date", :onclick => "WdatePicker({dateFmt:'yyyy-MM-dd HH-MM-SS'})" %>
    </div>
  </div>
  <blockquote class="blockquote text-center" style="margin-top: 20px;">
    <%= f.button  "提交", class: "btn btn-success" %>
    <%= link_to  "返回", live_lists_path, class: "btn btn-primary" %>
  </blockquote>
<% end %>